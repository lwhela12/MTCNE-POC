# Local-first defaults
USE_EMBEDDINGS=true
USE_BM25=true
USE_LLM=false
USE_CLOUD_LLM=false
LLM_MODEL=gpt-4o-mini

# Embedding provider and model
EMBEDDING_PROVIDER=xenova
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2

# Cloud provider keys (only if using cloud)
# OPENAI_API_KEY=

# Limits
MAX_UPLOAD_MB=10
MAX_PAGES=300

# Server ports
SERVER_PORT=3001
WEB_PORT=5173

# Retrieval tuning
SCORE_ALPHA=0.7
SCORE_BETA=0.3
PHRASE_BOOST=1.2
SUBJECT_BOOST=1.2
PLANE_BOOST=1.2
LOW_CONFIDENCE_THRESHOLD=0.35
MIN_FINAL_SCORE=0.1
RERANK_TOPK=8
